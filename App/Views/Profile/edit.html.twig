{% extends "base.html.twig" %}
{% block title %}Profile{% endblock %}

{% block footer %}
    <script src="{{ app }}/js/hideShowPassword.min.js"></script>
    <script src="{{ app }}/js/app.js"></script>

    <script>

        $(document).ready(function() {
            /**
             * sets up validation on our form
             */
            $('#formProfile').validate({
                rules: {
                    username: 'required',
                    email: {
                        required: true,
                        email: true,
                        remote: '{{ app }}/accounts/validate-email'
                    },
                    password: {
                        required: true,
                        minlength: 6,
                        validPassword: true
                    },
                    password_confirmation: {
                        equalTo: '#inputPassword'
                    }
                },
                messages: {
                    email: {
                        remote: 'email already taken'
                    }
                }
            });

            /**
             * Show passowrd toggle button
             */
            $('#inputPassword').hideShowPassword({
                show: false,
                innerToggle: 'focus'
            });
            $('#inputPasswordConfirmation').hideShowPassword({
                show: false,
                innerToggle: 'focus'
            });
        });
    </script>

{% endblock %}

{% block body %}

    <h1>Profile</h1>

    {% if user.errors is not empty %}
        <p>Errors:</p>
        <ul>
            {% for error in user.errors %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <form method="post" id="formProfile">

        <div>
            <label for="inputName">Username</label>
            <input id="inputName" name="username" placeholder="Username" value="{{ user.username }}" required />
        </div>
        <div>
            <label for="inputEmail">Email address</label>
            <input id="inputEmail" name="email" placeholder="email address" value="{{ user.email }}" required type="email" />
        </div>
        <div>
            <label for="inputPassword">Password</label>
            <input type="password" id="inputPassword" name="password" placeholder="Password" required />
        </div>
        <div>
            <label for="inputPasswordConfirmation">Password</label>
            <input type="password" id="inputPasswordConfirmation" name="password_confirmation" placeholder="Repeat Password" required />
        </div>
